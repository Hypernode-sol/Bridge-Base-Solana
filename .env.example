# Bridge-Base-Solana Environment Configuration

# ================================
# Network RPC Endpoints
# ================================

# Solana RPC URL (mainnet-beta, devnet, or custom)
SOLANA_RPC_URL=https://api.devnet.solana.com

# Base RPC URL (Base Sepolia testnet or mainnet)
BASE_RPC_URL=https://sepolia.base.org

# ================================
# Private Keys (NEVER COMMIT THESE)
# ================================

# Operator wallet private key (for deployments and operations)
# Keep this secure! Use a separate wallet for testnet vs mainnet
BRIDGE_PRIVATE_KEY=

# Base deployer private key (for Foundry deployments)
BASE_DEPLOYER_KEY=

# ================================
# Bridge Configuration
# ================================

# Bridge program ID on Solana (after deployment)
SOLANA_BRIDGE_PROGRAM_ID=

# Bridge contract address on Base (after deployment)
BASE_BRIDGE_ADDRESS=

# ================================
# Relayer Configuration
# ================================

# Relayer mode (development, production)
RELAYER_MODE=development

# Polling interval in milliseconds
RELAYER_POLL_INTERVAL=5000

# ================================
# Oracle & Telemetry
# ================================

# Hypernode telemetry endpoint
ORACLE_ENDPOINT=https://hypernodesolana.org/api

# Telemetry API key (optional)
TELEMETRY_API_KEY=

# ================================
# Development Options
# ================================

# Enable debug logging
DEBUG=false

# Log level (error, warn, info, debug)
LOG_LEVEL=info

# Network environment (mainnet, devnet, localnet)
NETWORK_ENV=devnet

# ================================
# Token Addresses (after deployment)
# ================================

# Wrapped SOL on Base
WRAPPED_SOL_BASE=

# Wrapped HYPER on Solana
WRAPPED_HYPER_SOLANA=

# ================================
# Gas & Fee Configuration
# ================================

# Base gas limit for bridge transactions
BASE_GAS_LIMIT=500000

# Priority fee for Solana (micro-lamports)
SOLANA_PRIORITY_FEE=1000

# ================================
# Security
# ================================

# Message timeout in seconds
MESSAGE_TIMEOUT=900

# Maximum bridge amount per transaction (in base units)
MAX_BRIDGE_AMOUNT=1000000000000

# Minimum bridge amount per transaction (in base units)
MIN_BRIDGE_AMOUNT=1000

# ================================
# Monitoring & Alerts
# ================================

# Alert webhook URL (for critical events)
ALERT_WEBHOOK_URL=

# Enable monitoring
ENABLE_MONITORING=true
